metricsMixin = Mixin {
 This Group {
  layout: Layout { grab: horizontal True vertical True}
  compact: True
 }
 Text {
  styling: metricsValue
  compact: True
  align: Left
  layout: Layout { grab:horizontal True vertical False}
 }
 Label {
  styling: metricsLabel
  break: False
  layout: Layout { hint: align: vertical Center horizontal Beginning indent: horizontal 0 vertical 12 grab:horizontal True vertical False}  
  
 }
 Link {
  styling: metricsValue
  compact: True
  align: Left
  layout: Layout { grab:horizontal True vertical False}
  underline:Hover
 }
}


